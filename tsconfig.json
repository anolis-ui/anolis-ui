{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitReturns": false,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "packages",
    "website",
    "**/*.js",
    ".eslintrc.js"
  ]
}
