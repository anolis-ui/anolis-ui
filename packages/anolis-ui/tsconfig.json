{
  "compilerOptions": {
    "declarationDir": "./dist",
    "baseUrl": "./src",
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "importHelpers": true,
    "declaration": true,
    "rootDir": "./src",
    "emitDeclarationOnly": true,
    "paths": {
      "*": [
        "*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "noImplicitReturns": false,
  },
  "exclude": [
    "node_modules",
    "dist",
    "./dist",
    "./dist/**/*",
    "./dist/**/*.d.ts"
  ],
  "include": [
    "src"
  ]
}
